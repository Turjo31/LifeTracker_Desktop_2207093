<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.turjo2207093.lifetracker.HelloController">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
   <children>
      <Label text="LifeTracker" textFill="#2E7D32">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
      </Label>
      <Label text="Gamify your habits, level up your life!" textFill="#666666">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Button onAction="#onUserLoginClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="User Login">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button onAction="#onAdminLoginClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: #4CAF50; -fx-border-radius: 5; -fx-text-fill: #4CAF50;" text="Admin Login">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
