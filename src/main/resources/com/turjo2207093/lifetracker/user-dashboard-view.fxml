<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.turjo2207093.lifetracker.UserDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #4CAF50;" BorderPane.alignment="CENTER">
         <children>
            <Label text="LifeTracker" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button onAction="#onLeaderboardClick" style="-fx-background-color: white; -fx-text-fill: #4CAF50; -fx-background-radius: 5;" text="Leaderboard" />
                  <Button onAction="#onProfileClick" style="-fx-background-color: white; -fx-text-fill: #4CAF50; -fx-background-radius: 5;" text="My Profile" />
                  <Button onAction="#onLogoutClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" text="Logout" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="20.0" style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
               <children>
                  <VBox>
                     <children>
                        <Label fx:id="levelLabel" text="Level 1" textFill="#2E7D32">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Label text="Beginner Tracker" textFill="#666666" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="xpLabel" text="XP: 0 / 100" textFill="#666666" />
                        <ProgressBar fx:id="xpProgressBar" prefWidth="400.0" progress="0.0" style="-fx-accent: #4CAF50;" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <Label text="Your Habits" textFill="#2E7D32">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: #f4f4f4;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="habitsContainer" spacing="15.0">
                     <!-- Habits will be added here dynamically -->
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="70.0" style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" right="30.0" />
         </padding>
         <children>
            <Button onAction="#onAddHabitClick" style="-fx-background-color: #4CAF50; -fx-background-radius: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="+" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>