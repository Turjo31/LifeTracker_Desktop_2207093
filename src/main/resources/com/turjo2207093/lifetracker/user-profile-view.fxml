<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.turjo2207093.lifetracker.UserProfileController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #4CAF50;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onBackClick" style="-fx-background-color: transparent; -fx-text-fill: white;" text="&lt; Back">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Label text="My Profile" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="20.0" style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
         </padding>
         <children>
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Personal Information" textFill="#2E7D32">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Email" textFill="#666666" />
                        <TextField fx:id="emailField" editable="false" style="-fx-background-color: #e0e0e0;" text="user@example.com" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Full Name" textFill="#666666" />
                        <TextField fx:id="nameField" promptText="Enter your full name" />
                     </children>
                  </VBox>
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Age" textFill="#666666" />
                              <TextField fx:id="ageField" promptText="Age" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Gender" textFill="#666666" />
                              <ComboBox fx:id="genderComboBox" prefWidth="150.0" promptText="Select" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onSaveProfileClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save Changes" />
                        <Button mnemonicParsing="false" onAction="#onOpenDiaryClick" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Open Diary" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
